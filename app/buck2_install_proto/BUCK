    name = "buck2_install_proto",
    srcs = glob(["src/**/*.rs"]),
    build_script = "build.rs",
    doctests = False,  # FIXME
    protos = ["install.proto"],
    deps = [
        "fbsource//third-party/rust:tonic",
    ],
)

