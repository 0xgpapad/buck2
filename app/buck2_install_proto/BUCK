    name = "installer",
    srcs = [
        "main.py",
    ],
    base_module = "",
    main_module = "main",
    deps = [
        ":install-py",
    ],
)

grpc_library(
    name = "install",
    srcs = [
        "install.proto",
    ],
    languages = [
        "py",
    ],
)
